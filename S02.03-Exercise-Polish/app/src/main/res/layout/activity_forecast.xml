<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_weather_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp" />
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_error_message"
        android:visibility="invisible"
        android:textSize="18sp"
        android:text="@string/weather_load_error"/>
    <ProgressBar
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/pb_loading_indicator"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <!--COMPLETED Add a TextView that you will show the user if there is an error loading content-->
    <!--COMPLETED Make the width and the height wrap_content-->
    <!--COMPLETED Give the TextView a default error message stating that an error occurred (use strings.xml)-->
    <!--COMPLETED Set the default visibility of the TextView to invisible-->

    <!--COMPLETED Add a ProgressBar to show the user content is loading-->
    <!--COMPLETED Make the width and height of the ProgressBar 42dp-->
    <!--COMPLETED Set the layout_gravity of the ProgressBar to center-->
    <!--COMPLETED Set the default visibility of the ProgressBar to invisible-->

</FrameLayout>
